<Window x:Class="ADUMP.ListUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:adump="clr-namespace:ADUMP"
        Title="ListUser" Height="300" Width="500">
    <Grid>
        <DataGrid Name="dgUsers" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Nom d'utilisateur" Binding="{Binding Username}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Classe" Binding="{Binding Class}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
